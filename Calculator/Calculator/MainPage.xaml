<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="Calculator.MainPage"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <Grid BackgroundColor="DarkBlue">
        <Grid.RowDefinitions>
            <RowDefinition Height="2*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <Label
            Grid.Row="0"
            Grid.Column="0"
            Grid.ColumnSpan="4"
            BackgroundColor="LightGray"
            FontAttributes="Bold"
            FontSize="50"
            HorizontalTextAlignment="End"
            Text="{Binding DisplayText}"
            TextColor="Black"
            VerticalOptions="Center"
            VerticalTextAlignment="Center" />
        <Button
            Grid.Row="1"
            Grid.Column="0"
            BackgroundColor="Gray"
            Command="{Binding ModifyOperandCommand}"
            CommandParameter="C"
            FontAttributes="Bold"
            FontSize="40"
            Text="C"
            VerticalOptions="Center" />
        <Button
            Grid.Row="1"
            Grid.Column="1"
            BackgroundColor="Gray"
            Command="{Binding ModifyOperandCommand}"
            CommandParameter="+/-"
            FontAttributes="Bold"
            FontSize="40"
            Text="+/-"
            VerticalOptions="Center" />
        <Button
            Grid.Row="1"
            Grid.Column="2"
            BackgroundColor="Gray"
            Command="{Binding ModifyOperandCommand}"
            CommandParameter="%"
            FontAttributes="Bold"
            FontSize="40"
            Text="%"
            VerticalOptions="Center" />
        <Button
            Grid.Row="1"
            Grid.Column="3"
            BackgroundColor="Orange"
            Command="{Binding SetOperationCommand}"
            CommandParameter="÷"
            FontAttributes="Bold"
            FontSize="40"
            Text="÷"
            VerticalOptions="Center" />
        <Button
            Grid.Row="2"
            Grid.Column="0"
            BackgroundColor="LightGray"
            Command="{Binding AddNumberCommand}"
            CommandParameter="7"
            FontAttributes="Bold"
            FontSize="40"
            Text="7"
            VerticalOptions="Center" />
        <Button
            Grid.Row="2"
            Grid.Column="1"
            BackgroundColor="LightGray"
            Command="{Binding AddNumberCommand}"
            CommandParameter="8"
            FontAttributes="Bold"
            FontSize="40"
            Text="8"
            VerticalOptions="Center" />
        <Button
            Grid.Row="2"
            Grid.Column="2"
            BackgroundColor="LightGray"
            Command="{Binding AddNumberCommand}"
            CommandParameter="9"
            FontAttributes="Bold"
            FontSize="40"
            Text="9"
            VerticalOptions="Center" />
        <Button
            Grid.Row="2"
            Grid.Column="3"
            BackgroundColor="Orange"
            Command="{Binding SetOperationCommand}"
            CommandParameter="×"
            FontAttributes="Bold"
            FontSize="40"
            Text="×"
            VerticalOptions="Center" />
        <Button
            Grid.Row="3"
            Grid.Column="0"
            BackgroundColor="LightGray"
            Command="{Binding AddNumberCommand}"
            CommandParameter="4"
            FontAttributes="Bold"
            FontSize="40"
            Text="4"
            VerticalOptions="Center" />
        <Button
            Grid.Row="3"
            Grid.Column="1"
            BackgroundColor="LightGray"
            Command="{Binding AddNumberCommand}"
            CommandParameter="5"
            FontAttributes="Bold"
            FontSize="40"
            Text="5"
            VerticalOptions="Center" />
        <Button
            Grid.Row="3"
            Grid.Column="2"
            BackgroundColor="LightGray"
            Command="{Binding AddNumberCommand}"
            CommandParameter="6"
            FontAttributes="Bold"
            FontSize="40"
            Text="6"
            VerticalOptions="Center" />
        <Button
            Grid.Row="3"
            Grid.Column="3"
            BackgroundColor="Orange"
            Command="{Binding SetOperationCommand}"
            CommandParameter="-"
            FontAttributes="Bold"
            FontSize="40"
            Text="-"
            VerticalOptions="Center" />
        <Button
            Grid.Row="4"
            Grid.Column="0"
            BackgroundColor="LightGray"
            Command="{Binding AddNumberCommand}"
            CommandParameter="1"
            FontAttributes="Bold"
            FontSize="40"
            Text="1"
            VerticalOptions="Center" />
        <Button
            Grid.Row="4"
            Grid.Column="1"
            BackgroundColor="LightGray"
            Command="{Binding AddNumberCommand}"
            CommandParameter="2"
            FontAttributes="Bold"
            FontSize="40"
            Text="2"
            VerticalOptions="Center" />
        <Button
            Grid.Row="4"
            Grid.Column="2"
            BackgroundColor="LightGray"
            Command="{Binding AddNumberCommand}"
            CommandParameter="3"
            FontAttributes="Bold"
            FontSize="40"
            Text="3"
            VerticalOptions="Center" />
        <Button
            Grid.Row="4"
            Grid.Column="3"
            BackgroundColor="Orange"
            Command="{Binding SetOperationCommand}"
            CommandParameter="+"
            FontAttributes="Bold"
            FontSize="40"
            Text="+"
            VerticalOptions="Center" />
        <Button
            Grid.Row="5"
            Grid.Column="0"
            Grid.ColumnSpan="2"
            BackgroundColor="LightGray"
            Command="{Binding AddNumberCommand}"
            CommandParameter="0"
            FontAttributes="Bold"
            FontSize="40"
            Text="0"
            VerticalOptions="Center" />
        <Button
            Grid.Row="5"
            Grid.Column="2"
            BackgroundColor="LightGray"
            Command="{Binding ModifyOperandCommand}"
            CommandParameter="."
            FontAttributes="Bold"
            FontSize="40"
            Text="."
            VerticalOptions="Center" />
        <Button
            Grid.Row="5"
            Grid.Column="3"
            BackgroundColor="Orange"
            Command="{Binding SetOperationCommand}"
            CommandParameter="="
            FontAttributes="Bold"
            FontSize="40"
            Text="="
            VerticalOptions="Center" />
    </Grid>

</ContentPage>
